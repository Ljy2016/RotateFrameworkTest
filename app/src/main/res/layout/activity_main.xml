<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.azadljy.myapplication.MainActivity">

    <Button
        android:text="Comeon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/library0"
        android:layout_marginTop="112dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:onClick="comeon" />

    <Button
        android:text="Attack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/library1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="88dp"
        app:layout_constraintTop_toBottomOf="@+id/library0"
        android:onClick="attack"
        app:layout_constraintBottom_toTopOf="@+id/library2"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.050000012" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/library2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Defense"
        android:onClick="defense"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="88dp" />
</android.support.constraint.ConstraintLayout>
